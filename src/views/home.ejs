<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>

  <body>
    <div class="min-h-screen bg-gray-100">
      <div class="bg-white shadow-md">
        <div class="container mx-auto px-4">
          <div class="flex justify-between items-center py-4">
            <div class="topnav flex space-x-4">
              <a
                class="text-blue-500 hover:text-blue-700 font-semibold"
                href="/"
                >Home</a
              >
              <a class="text-gray-700 hover:text-blue-700" href="/create"
                >Create user</a
              >
            </div>
          </div>
        </div>
      </div>
      <div class="container mx-auto px-4 py-8">
        <div
          class="table-container bg-white shadow-md rounded-lg overflow-hidden"
        >
          <table class="min-w-full bg-white">
            <thead>
              <tr>
                <th
                  class="px-6 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs leading-4 text-gray-600 uppercase tracking-wider"
                >
                  ID
                </th>
                <th
                  class="px-6 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs leading-4 text-gray-600 uppercase tracking-wider"
                >
                  Username
                </th>
                <th
                  class="px-6 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs leading-4 text-gray-600 uppercase tracking-wider"
                >
                  Email
                </th>
                <th
                  class="px-6 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs leading-4 text-gray-600 uppercase tracking-wider"
                >
                  Phone
                </th>
                <th
                  class="px-6 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs leading-4 text-gray-600 uppercase tracking-wider"
                >
                  Age
                </th>
                <th
                  class="px-6 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs leading-4 text-gray-600 uppercase tracking-wider"
                >
                  Action
                </th>
              </tr>
            </thead>
            <tbody>
              <% data.forEach(user => { %>
              <tr>
                <td class="px-6 py-4 border-b border-gray-200">
                  <%= user.id %>
                </td>
                <td class="px-6 py-4 border-b border-gray-200">
                  <%= user.username %>
                </td>
                <td class="px-6 py-4 border-b border-gray-200">
                  <%= user.email %>
                </td>
                <td class="px-6 py-4 border-b border-gray-200">
                  <%= user.phoneNumber %>
                </td>
                <td class="px-6 py-4 border-b border-gray-200">
                  <%= user.age %>
                </td>
                <td class="px-6 py-4 border-b border-gray-200">
                  <button class="bg-blue-500 text-white px-4 py-2 rounded mr-2">
                    Edit
                  </button>
                  <a
                    href="/post-delete-user?id=<%=user.id%>"
                    class="bg-red-500 text-white px-4 py-2 rounded"
                  >
                    Remove
                  </a>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </body>
</html>
